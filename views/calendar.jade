doctype html
html(lang=site.lang, data-ng-app='calendarApp')
  head
    meta(charset='utf-8')
    title=page.title
    <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /><![endif]-->
    meta(name='viewport', content='width=device-width')
    meta(name='author', content=site.author)
    link(rel='stylesheet', href='/lib/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/main.css')
    script(src='/lib/angular/angular.min.js', defer)
    script(src='/js/calendar.js', defer)
    link(rel='icon', type='image/vnd.microsoft.icon', href='/favicon.ico')
    link(rel='shortcut icon', type='image/vnd.microsoft.icon', href='/favicon.ico')
  body
    div.container
      header.page-header
        h1=page.title
        p=page.description
      main(role='main', data-ng-controller='calendarCtrl')
        noscript
          div.alert.alert-danger
            h2=site.name + 'はJavaScriptを使用しています。'
            p お使いのブラウザのJavaScriptを有効にしてご利用ください。
        h2.h3 Select
        p.btn-group
          label.btn.btn-default.btn-lg(data-ng-repeat='department in departments', data-ng-class='{active: isSelectedDepartment(department)}')
            input(type='checkbox', value='{{department.text}}', data-ng-click='setSelectedDepartments()')
            | {{department.text}}
        h2.h3 Download
        p
          a.btn.btn-primary.btn-lg(href='/calendar/kyukou.ics{{query()}}') Get iCalendar
        p URL: 
          a(href='https://'+site.url+'/calendar/kyukou.ics{{query()}}')='https://'+site.url+'/calendar/kyukou.ics{{query()}}'
      include ./includes/footer.jade

<!doctype html>
<html data-ng-app>
<head>
  <meta charset="utf-8" />
  <title>Login to <%site.name%> admin</title>
  <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /><![endif]-->
  <meta name="author" content="<%site.author%>" />
  <meta name="viewport" content="width=device-width">
  <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css" />
</head>
<body class="container">
  <h1>Login</h1>
  <form action="/admin/login" method="post">
    <p class="form-group">
      <label for="user-name">Name</label>
      <input type="text" required id="user-name" name="name" class="form-control input-lg" autocomplete="off" />
    </p>
    <p class="form-group">
      <label for="user-password">Password</label>
      <input type="password" required id="user-password" name="password" class="form-control input-lg" autocomplete="off" />
    </p>
    <p>
      <button type="submit" class="btn btn-default btn-lg">Login</button>
    </p>
  </form>
</body>
</html>
